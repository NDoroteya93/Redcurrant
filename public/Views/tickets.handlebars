                                <h4 class="text-left">{{title}}</h4>
                            </div>
                            <div class="col-lg-4">
                                <p class="text-right">
                                    <span class="glyphicon glyphicon-user icon-size-xs"></span>
                                </p>
                            </div>
                        </div>
                        <div class="caption">
                            <p><strong>Description:</strong></p>
                            <p><strong>Author: </strong>{{author}}</p>
                            <p><strong>Category: </strong>{{category}}</p>
                            <p>Comments</p>
                            <p align="center">
                                <a href="#myModal" class="btn btn-primary btn-block" data-toggle="modal">View More information</a>
                            </p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="panel-footer">
            </div>
        </div>
    </div>

    <!--Done-->
    <div id="done-container" class="col-lg-4 col-md-4 col-sm-4 col-xs-12 nopadding" data-state="2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="text-center">Done</h4>
            </div>
            <div id="draggable-done" class="panel-body dropConnect">
                {{#each done}}
